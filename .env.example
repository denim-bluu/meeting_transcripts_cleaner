# =============================================================================
# Meeting Intelligence System - Environment Configuration
# =============================================================================

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
DEFAULT_MODEL=o3-mini
CLEANING_MODEL=o3-mini
REVIEW_MODEL=o3-mini
SYNTHESIS_MODEL=o3
INSIGHTS_MODEL=o3

# =============================================================================
# Environment & Server Configuration
# =============================================================================

# Application Environment (development, staging, production)
ENVIRONMENT=development

# Backend Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true
RELOAD=true

# API Configuration
API_TITLE=Meeting Transcript API
API_VERSION=1.0.0

# Frontend Service Configuration
BACKEND_URL=http://localhost:8000
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0

# =============================================================================
# Task Cache Configuration (In-Memory Storage)
# =============================================================================

# Task time-to-live in hours (1-24)
TASK_TTL_HOURS=1

# Cache cleanup interval in minutes (1-60)
CLEANUP_INTERVAL_MINUTES=10

# =============================================================================
# Processing & Performance Configuration
# =============================================================================

# Maximum concurrent AI processing tasks (1-50)
MAX_CONCURRENT_TASKS=10

# API rate limit per minute (1-300)
RATE_LIMIT_PER_MINUTE=50

# Maximum file upload size in MB (1-500)
MAX_FILE_SIZE_MB=100

# =============================================================================
# Security & CORS Configuration
# =============================================================================

# Allowed CORS origins (comma-separated)
# Use "*" for development, specific domains for production
CORS_ORIGINS=*

# =============================================================================
# Logging & Monitoring Configuration
# =============================================================================

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable JSON logging for production
LOG_JSON=false

# Health check timeout in seconds (1-60)
HEALTH_CHECK_TIMEOUT=10
